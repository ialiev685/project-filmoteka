
{{#each this}}
<li class="film-card">
  <img src="https://image.tmdb.org/t/p/w300/{{poster_path}}" alt="{{title}}" id="{{id}}" class="film-image"/>

  <div class="data-card">
    <h1 class="film-title">
      {{title}}
    </h1>    
    <p class="data-list">     
      {{genres}}
    </p> 
    <p class="data-list">
      {{release_date}}
    </p> 
    <div class="data-vote">
      <p class="vote-average is-hidden">
      {{vote_average}}
    </p>  
    </div> 
      
  </div>
</li>
{{/each}}